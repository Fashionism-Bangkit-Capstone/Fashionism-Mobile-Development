<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        tools:context=".ui.ResultSearchActivity">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCloseResult"
            style="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/favoriteIconContentDescription"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:elevation="3dp"
            android:padding="0dp"
            app:iconTint="@color/button_colorbackground"
            app:cornerRadius="100dp"
            app:icon="@drawable/baseline_close_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="24dp"
            app:layout_constraintStart_toStartOf="@+id/ivResultSearch"
            app:layout_constraintTop_toTopOf="@+id/ivResultSearch" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivResultSearch"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:adjustViewBounds="true"
            android:elevation="2dp"
            tools:src="@drawable/dummy_baju"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CornerRadiusImageItem" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSimiliarSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/placeholder_search"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/ivResultSearch"
            app:layout_constraintTop_toBottomOf="@+id/ivResultSearch" />

        <androidx.cardview.widget.CardView
            android:id="@+id/CV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:layout_constraintStart_toStartOf="@+id/tvSimiliarSearch"
            app:layout_constraintTop_toBottomOf="@+id/tvSimiliarSearch">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivFashionImage"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/dummy_baju"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/CornerRadiusImageItem" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvFashionName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="10dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start|center_vertical"
                    android:text="@string/dummy_item_name"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/ivFashionImage"
                    app:layout_constraintTop_toBottomOf="@+id/ivFashionImage" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvStoreName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:gravity="start|center_vertical"
                    android:text="@string/dummy_shop_name"
                    android:textColor="#6C6C6C"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/tvFashionName"
                    app:layout_constraintStart_toStartOf="@+id/tvFashionName"
                    app:layout_constraintTop_toBottomOf="@+id/tvFashionName" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:gravity="start|center_vertical"
                    android:text="@string/dummy_item_price"
                    android:textColor="@color/button_colorbackground"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/ivFavoriteItem"
                    app:layout_constraintEnd_toStartOf="@+id/ivFavoriteItem"
                    app:layout_constraintStart_toStartOf="@+id/tvStoreName"
                    app:layout_constraintTop_toTopOf="@+id/ivFavoriteItem" />

                <ImageView
                    android:id="@+id/ivFavoriteItem"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/favoriteIconContentDescription"
                    android:src="@drawable/baseline_favorite_border_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvStoreName" />

                <ImageView
                    android:id="@+id/ivFavoriteItemFill"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="@string/favoriteIconContentDescription"
                    android:src="@drawable/baseline_favorite_24"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvStoreName" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

